  <tbody>
      {{#each rows}}
    <tr>
      {{!-- <th scope="row">{{this.id}}</th> --}}
      <td>{{this.doc_name}}</td>
      <td>{{this.specialty}}</td>
      <td>{{this.doc_email}}</td>
      <td>{{this.doc_day}}</td>
      <td>{{this.doc_time1}}-{{this.doc_time2}}</td>
      <td>{{this.doc_contact}}</td>
      <td>{{this.address}}</td>
      <td><i class="fas fa-edit"><span></i>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</span><i class="fa fa-trash" aria-hidden="true"></i></td>
    </tr>
    
    {{/each}}
