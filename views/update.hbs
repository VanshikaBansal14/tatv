    <table id="doctors">
        <tr>
            <tr>
                <th>Name</th>
                <th>Speciality</th>
                <th>Email</th>
                <th>Date</th>
                <th>Time</th>
                <th>Contact</th>
                <th>Address</th>
                <th></th>
            </tr>
            <tr>
                <form action="/auth/update" method="POST">
                <td><input type="text" name="name" required></td>
                <td><input type="text" name="specialty" required></td>
                <td><input type="email" name="email" required></td>
                <td><input type="date" name="date"></td>
                <td><input type="time" name="time1"> - <input type="time" name="time2"></td>
                <td><input type="tel" name="tel" required></td>
                <td><input type="text-box" name="address"></td>
                <td><input type="submit" value="Add"></td>
                </form> 
            </tr>
        </tr>
    </table>
    </div class="alert-container">
        {{#if message }}
        <h4 class="alert alert-danger mt-4">{{message}}</h4>
        {{/if}}
    </div>
    <br><br><br>
    <table id="doctors">
  <thead class="thead-dark">
    <tr>
      {{!-- <th scope="col">#</th> --}}
      <th scope="col">Name</th>
      <th scope="col">Specialty</th>
      <th scope="col">Email</th>
