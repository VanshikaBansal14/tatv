    <h2>Lab Test Records</h2>
    <table id="labtest">
        <tr>
            <tr>
                <th>Token</th>
                <th>User_Id</th>
                <th>Test Id</th>
                <th>Test</th>
                <th>Date</th>
                <th>Time</th>
                <th>Status</th>
                <th>Report</th>
            </tr>
            {{#each results}}
            <tr>
                <td>{{this.user_id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.test_id}}</td>
                <td>{{this.test_name}}</td>
                <td>{{this.test_date}}</td>
                <td>{{this.test_time}}</td>
                <td><input type="radio" name="status" value="Visited">Visited<br>
                    <input type="radio" name="status" value="Not Visited">Not Visited</td>
                <td><form action="#">
                    <input type="file" id="myFile" name="filename">
                    <input type="submit"value="Upload">
                </form></td>
            </tr>
            {{/each}}
        </tr>
    </table>
