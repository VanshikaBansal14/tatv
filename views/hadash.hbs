    {{!-- second table --}}
    <table class="body-table2" id="dash-table1">
        <tr>
            <td id="th1" colspan="8">Lab Tests Appointments</td>
        </tr>
        <tr>
        <tr>
            <th id="th2">Token NO.</th>
            <th>Name</th>
            <th>Banasthali ID</th>
            <th>Test_Id</th>
            <th>Test Name</th>
            <th>Date</th>
            <th>Status</th>
            <th>Report</th>

        </tr>
        </tr>
        <tbody>
            {{#each result}}
            <tr>
                <td>{{this.Lab_token}}</td>
                <td>{{this.Name}}</td>
                <td>{{this.Banasthali_Id}}</td>
                <td>{{this.Test_ID}}</td>
                <td>{{this.test_name}}</td>
                <td>{{this.Date}}</td>
                {{!-- <td>{{this.appoint_status}}</td>
                <td>{{this.lab_report}}</td> --}}
                {{!-- <td><input type="radio" name="status" value="Visited">Visited<br>
                    <input type="radio" name="status" value="Not Visited">Not Visited
                </td> --}}
                <td>
                    <form action=method="POST" action="/auth/upload">
                        <input type="radio" name="status" value="{{this.Status}}">Visited<br>
                        <input type="radio" name="status" value="{{this.Status}}">Not Visited
                        {{!-- <button class="btn" type="submit">Submit</button> --}}
                    </form>

                </td>
                <td>
                    <form action="/auth/upload" enctype="multipart/form-data" method="POST">
                        <input type="file" name="pdf" accept=".pdf" />
                        <input type="submit" value="Upload">
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
