    <h1>Today's Appointments</h1>
    <table class="body-table1" id="dash-table1">

        <tr>
            <td id="th1" colspan="8">Doctor's Appointments</td>
        </tr>

        <tr>
        <tr>
            <th id="th2">Token NO.</th>
            <th>Name</th>
            <th>Banasthali ID</th>
            <th>Doctor</th>
            <th>Problem</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
        </tr>
        </tr>

        <tbody>
            {{#each rows}}
            <tr>
                <td>{{this.token}}</td>
                <td>{{this.Name}}</td>
                <td>{{this.Bv_Id}}</td>
                <td>{{this.doc_name}}</td>
                <td>{{this.problem}}</td>
                <td>{{this.doc_day}}</td>
                <td>{{this.doc_time1}}-{{this.doc_time2}}</td>
                {{!-- <td>{{this.status}}</td> --}}
                <td><input type="radio" name="status" value="Visited">Visited<br>
                    <input type="radio" name="status" value="Not Visited">Not Visited
                </td>
            </tr>
            {{/each}}
        </tbody>

        {{!-- <tr id="tr1">
